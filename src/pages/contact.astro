---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact">
    <body>
        
    
    <section class="encabezado">
        <h1>CONTACT US</h1>

        <center
            ><p>
                If you have any questions or would like to learn more about my
                real estate investing <br />coaching services, please fill out
                the form below and I will get back to you as within 24 to<br /> 48
                hours.
            </p></center
        >
    </section>

    <section class="form">
        <form action="https://formsubmit.co/330100anavargas.asuncion@gmail.com" method="POST" >
            <div class="mb-3">
                <label for="name" class="form-label">First Name</label>
                <input name="First Name" type="text" class="form-control" id="name" />
            </div>
            <div class="mb-3">
                <label for="Last" class="form-label">Last Name</label>
                <input name="Last Name" type="text" class="form-control" id="Last" />
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label"
                    >Email *</label
                >
                <input
                name="email"
                    type="email"
                    class="form-control"
                    id="exampleInputEmail1"
                    aria-describedby="emailHelp"
                />
                <div id="emailHelp" class="form-text">
                    We'll never share your email with anyone else.
                </div>
            </div>
            <div class="mb-3">
                <label for="Phone" class="form-label">Phone</label>
                <input  name="Phone" type="number" class="form-control" id="Phone" />
            </div>
            <div class="mb-3">
                <label for="Comments" class="form-label">Comments</label>
                <input name="Comentario" type="text" class="form-control" id="Comments" />
            </div>

            <button type="button" class="btn btn-outline-warning">ENVIAR</button>
            <input type="hidden" name="_next" value="The future real estate millionaire coaching"/>
        </form>
    </section>
</body>
    <style>
        body{
            background-color: #393b3c;
        }
        h5 {
            font-weight: normal;
            color: white;
            font-size: 16px;
            text-align: center;
        }

        .section form {
            background-color: #393b3c;
        }

        .form {
            width: 960px;
            margin: 60px auto 20px;
            color: #f8f8f8;
        }
        .form-text {
            font-size: 14px;
            color: #ffffff;
        }

        .form-label {
            font-size: 14px;
            color: #ffffff;
        }
        .form-control {
            background-color: #393b3c;
            border: 1px solid rgb(199, 166, 18);
        }

        h1 {
            width: 960px;
            margin: 60px auto 20px;
            color: #ffffff;
            font-size: 40px;
            border-bottom: 2px solid #ffc107;
        }

        p {
            color: #ffffff;
            font-size: 18px;
        }
    </style>
</Layout>
